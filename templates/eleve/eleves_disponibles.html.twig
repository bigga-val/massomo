{% include 'extension/sidebar.html.twig' %}
<!-- Header -->
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Default</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="#">Accueil</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Inscription</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <!-- Card stats -->
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-header border-0">
                    <div class="row align-items-center">
                        <div class="col">
                            <h3 class="mb-0">Eleves actifs</h3>
                        </div>
                        <div class="col-md-4 text-right">
                            <input type="text" class="form-control my-2" id="myInput" placeholder="Recherche...">
                            {#                            <button onclick="HTMLtoPDF()" class="btn btn-sm btn-primary">See all</button>#}
                        </div>
                    </div>
                </div>
                {#                <div class="container" id="HTMLtoPDF">#}
                <div class="table-responsive" id="HTMLtoPDF">
                    <table id="example2" class="table table-bordered table-striped">
                        <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nom complet</th>
                            <th scope="col">Type</th>
                            <th scope="col">Date Cr√©ation</th>
                            <th scope="col">Actions</th>
                        </tr>
                        </thead>
                        <tbody id="tbody">
                        {% set i = 1 %}
                        {% for eleve in eleves %}
                            <tr>
                                <td>
                                    {{ i }}
                                </td>
                                <td>
                                    {{ eleve.nomComplet|upper }}
                                </td>
                                <td>
                                    {{ eleve.etat.designation }}
                                </td>
                                <td>
                                    {{ eleve.createdAt|date('d-m-Y') }}
                                </td>
                                <td>
                                    {% set isInscripted = false %}
                                    {% for inscrit in inscrits %}
                                        {% if(inscrit.eleve.id == eleve.id) %}
                                            {% set isInscripted = true %}
                                        {% else %}
                                            {% set isInscripted = false %}
                                        {% endif %}
                                    {% endfor %}
                                    {% if(isInscripted == false) %}
                                        <a href="{{ path('profil_eleve', {'id': eleve.id}) }}">Confirmer Place</a>
                                    {% else %}
                                        <a href="{{ path('frais_payes', {'eleve': eleve.id}) }}">Frais Payes</a>

                                    {% endif %}
                                </td>
                            </tr>
                            {% set i = i + 1 %}
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    
<script>
      $(function () {
        $("#example1").DataTable({
          "responsive": true, "lengthChange": false, "autoWidth": false,
          "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
        }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        $('#example2').DataTable({
          "paging": true,
          "lengthChange": false,
          "searching": false,
          "ordering": true,
          "info": true,
          "autoWidth": false,
          "responsive": true,
        });
      });
    </script>

    {% include "extension/footer.html.twig" %}
</div>
