{% include 'extension/sidebar.html.twig' %}
<!-- Header -->
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Default</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="#">Accueil</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Inscription</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <!-- Card stats -->
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-header border-0">
                    <div class="row align-items-center">
                        <div class="col">
                            <h3 class="mb-0">Page </h3>
                        </div>
                        <div class="col text-right">
                            <a href="#!" class="btn btn-sm btn-primary">See all</a>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <form method="post">
                        <div class="row">
                            <div class="col">
                                <select name="classe" id="classe" class="form-control small">
                                    {% for classe in classes %}
                                        <option value="{{ classe.id }}">{{ classe.designation~' '~classe.options.designation }}</option>
                                    {% endfor %}
                                </select>
                                <input type="hidden" name="_token" value="{{ csrf_token('affectation') }}">
                            </div>
                            <div class="col">
                                <input type="submit" class="btn btn-primary" value="AFFECTER">
                            </div>
                        </div>
                    </form>
                    <form action="{{ path('changer_etat') }}" method="POST">
                        <div class="row">
                            <div class="col">
                                <select name="etat" id="etat" class="form-control small">
                                    {% for etat in etats %}
                                        <option value="{{ etat.id }}">{{ etat.designation }}</option>
                                    {% endfor %}
                                </select>
                                <input type="hidden" name="_token" value="{{ csrf_token('etat') }}">
                                <input type="hidden" name="eleve" value="{{ eleve.eleve.id }}">
                            </div>
                            <div class="col">
                                <input type="submit" class="btn btn-primary" value="ENREGISTRER">
                            </div>
                        </div>
                        </form>

                    <div class="row">
                        <div class="col">Nom et postnom: {{ eleve.eleve.nomComplet }}</div>
                        <div class="col">Classe: {{ eleve.classe.designation~' '~eleve.classe.options.designation }}</div>
                        <div class="col">Cat√©gorie: {{ eleve.eleve.categorie.designation }}</div>
                        <div class="col">Etat: {{ eleve.eleve.etat.designation }}</div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    {% include "extension/footer.html.twig" %}
</div>