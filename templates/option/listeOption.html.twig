{% include 'extension/sidebar.html.twig' %}
 
<div class="row">
       <div class="col">
         <div class="card bg-default shadow">
           <div class="card-header bg-transparent border-0">
             <h3 class="text-white mb-0">Liste des Options</h3>
           </div>
           <div class="table-responsive">
             <table class="table align-items-center table-dark table-flush" id="example1">
               <thead class="thead-dark">
                 <tr>
                   <th scope="col" class="sort" data-sort="name">Nom Option</th>
                   <th scope="col" class="sort" data-sort="status">date d'entr√©e</th>
                   <th scope="col">ajouter</th>
                   <th scope="col" class="sort" data-sort="completion">update</th>
                 </tr>
               </thead>
               <tbody class="list">
                {% for tab in options %}
                 <tr>
                   <td scope="row">
                     <div class="media align-items-center">
                       <div class="media-body">
                         <span class="name mb-0 text-sm">{{tab.designation}}</span>
                       </div>
                     </div>
                   </td>
                   <td class="budget">
                     {{tab.id}}
                   </td>
                   <td>
                     <div class="d-flex align-items-center">
                       <span class="completion mr-2">update</span>
                       <div>
                         <div class="progress">
                           <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;"></div>
                         </div>
                       </div>
                     </div>
                   </td>
                 </tr>
                {% endfor %}
               </tbody>
             </table>
           </div>
         </div>
       </div>
     </div>
{% include "extension/footer.html.twig" %}