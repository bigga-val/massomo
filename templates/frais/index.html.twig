{% include 'extension/sidebar.html.twig' %}
<!-- Header -->
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Default</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="#">Accueil</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Inscription</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <!-- Card stats -->
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-header border-0">
                    <div class="row align-items-center">
                        <div class="col">
                            <h3 class="mb-0">Parametres Frais</h3>
                        </div>
                        <div class="col text-right">
                            <a href="#!" class="btn btn-sm btn-primary">See all</a>
                        </div>
                    </div>
                </div>
                <div class="container">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    {{ form_widget(form.designation, {attr: {'class': 'form-control', 'placeholder': 'Designation Frais'}}) }}
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    {{ form_widget(form.montant, {attr: { 'class': 'form-control', 'placeholder': 'Montant Fixé' }}) }}
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <input type="SUBMIT" class="btn btn-primary" value="ENREGISTRER">
                                </div>
                            </div>
                        </div>
                    {{ form_end(form) }}
                    <div class="row">
                        <div class="col">
                            <div class="table-responsive">
                                <h3>Liste des frais disponibles</h3>
                                <input type="text" class="form-control my-2" placeholder="Rechercher Frais...">
                                <table id="example1" class="table table-bordered table-striped">
                                    <thead class="thead-light">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Désignation</th>
                                        <th scope="col">Montant</th>
                                        <th scope="col" class="text-center">Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% set i = 1 %}
                                    {% for frais in liste_frais %}
                                        <tr>
                                            <td>
                                                {{ i }}
                                            </td>
                                            <td>
                                                {{ frais.designation }}
                                            </td>
                                            <td>
                                                {{ frais.montant }}
                                            </td>
                                            <td>
                                              
                                                   {# {{ include('frais/_delete_form.html.twig') }}  #}
                                                  <a href="{{ path('frais_edit', {'id': frais.id}) }}" class="btn btn-warning btn-block">Modifier</a>
                                                
                                            </td>
                                        </tr>
                                        {% set i = i + 1 %}
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% include "extension/footer.html.twig" %}

    <script>
      $(function () {
        $("#example1").DataTable({
          "responsive": true, "lengthChange": false, "autoWidth": false,
          "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
        }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        $('#example2').DataTable({
          "paging": true,
          "lengthChange": false,
          "searching": false,
          "ordering": true,
          "info": true,
          "autoWidth": false,
          "responsive": true,
        });
      });
    </script>
</div>